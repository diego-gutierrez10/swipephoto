# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# TypeScript and JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON files
[*.{json,jsonc}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Package.json files
[package.json]
indent_size = 2 